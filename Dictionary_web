    def retranslateUi(self, Dialog):
        _translate = QtCore.QCoreApplication.translate
        Dialog.setWindowTitle(_translate("Dialog", "Dialog"))
        self.label.setText(_translate("Dialog", "Enter the word"))
        self.pushButton.setText(_translate("Dialog", "Search"))

        self.pushButton.clicked.connect(self.meaning)

    def meaning(self):
        try:
            word = self.lineEdit.text()
            URL = "http://www.dictionary.com/cgi-bin/dict.pl?term=%s" % word
            r = requests.get(URL)
            soup = BeautifulSoup(r.content, 'lxml')
            line = soup.find_all('meta')
            print([meta.attrs['content'] for meta in line if
                   'name' in meta.attrs and meta.attrs['name'] == 'description'])
        except BaseException as ex:
            print(ex)

